//Code: C program to demonstrate the use of a union 
//Author:Saba Raushan Hussain

#include<stdio.h>

struct car {
	char name[25];
	float price;
};

int main() {
	struct car s;
	printf("Name: ");
	scanf("%s", s.name);
	printf("Price: ");
	scanf("%f", &s.price);
	
	printf("Name: %s\n", s.name);
	printf("Price: %.2f\n", s.price);
	
	return 0;
}
